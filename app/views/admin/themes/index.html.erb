
<% @admin_themes.in_groups_of(3, false) do |row_themes| %>
  <div class="row">
    <% row_themes.each do |theme| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <% if theme.image_path.blank? %>
            <img data-src="holder.js/300x200" alt="...">
          <% else %>
            <%= image_tag theme.image_path %>
          <% end %>
          <div class="caption">
            <h3><%= theme.title %></h3>
            <p><%= theme.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img data-src="holder.js/300x200" alt="...">
      <div class="caption">
        <h3><%= link_to '添加新模版', new_admin_theme_path, class: 'btn btn-primary' %></h3>
      </div>
    </div>
  </div>
</div>



